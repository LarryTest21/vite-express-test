{
  "compilerOptions": {
    "noEmit": false,
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src/**/*", "netlify/functions/**/*"]
}
